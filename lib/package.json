{
  "init": {
    "private": true,
    "dependencies": {
      "nautil": "^0.31.1"
    },
    "devDependencies": {
      "nautil-cli": "^0.10.0"
    }
  },
  "lazy": [
    {
      "platforms": ["dom", "web-component", "ssr"],
      "dependencies": {
        "i18next-browser-languagedetector": "^4.0.1",
        "react-dom": "^17.0.2"
      },
      "devDependencies": {
        "html-webpack-plugin": "^5.3.1",
        "mini-css-extract-plugin": "^1.6.0",
        "optimize-css-assets-webpack-plugin": "^5.0.4",
        "react-hot-loader": "^4.13.0",
        "style-loader": "^2.0.0"
      }
    },
    {
      "platforms": ["dom"],
      "scripts": {
        "dev:dom": "nautil dev dom",
        "build:dom": "NODE_ENV=production nautil build dom"
      }
    },
    {
      "platforms": ["web-component"],
      "scripts": {
        "dev:webc": "nautil dev web-component",
        "build:webc": "NODE_ENV=production nautil build web-component"
      }
    },
    {
      "platforms": ["ssr"],
      "scripts": {
        "dev:ssr": "nautil dev ssr",
        "build:ssr": "NODE_ENV=production nautil build ssr"
      },
      "devDependencies": {
        "nodemon": "^1.19.4"
      }
    },
    {
      "platforms": ["native"],
      "scripts": {
        "dev:native": "nautil dev native",
        "build:native": "NODE_ENV=production nautil build native"
      },
      "dependencies": {
        "@react-native-async-storage/async-storage": "^1.14.1",
        "i18next-react-native-language-detector": "^1.0.2",
        "react-native": "^0.64.0",
        "react-native-locale-detector": "^1.0.1"
      },
      "devDependencies": {
        "react-native-cli": "^2.0.1",
        "react-native-css-loader": "^1.0.2"
      }
    }
  ]
}
